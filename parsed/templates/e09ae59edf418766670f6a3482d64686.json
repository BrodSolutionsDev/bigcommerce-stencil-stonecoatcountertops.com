{"components/custom/deep-pour-calculator":"\r\n  <div class=\"calculator-section-heading\">\r\n  </div>\r\n<div class=\"calculator-section-coverage\">\r\n    {{#each fields}}\r\n      {{#if name '==' '1 Gallon Kit'}}\r\n        <div class=\"kit-size\">\r\n          <img src=\"{{cdn 'img/info-icons/one_gallon_bucket.png'}}\" alt=\"One gallon kit\">\r\n          <!-- <span class=\"equals\">=</span> -->\r\n          <img src=\"{{cdn 'img/info-icons/square_footage.png'}}\" alt=\"Square footage icon\">\r\n          <div class=\"covers\">\r\n            <p class=\"value\">{{value}}</p>\r\n            <p>Sq Ft</p>\r\n          </div>\r\n        </div>\r\n      {{/if}}\r\n      {{#if name '==' '1/2 Gallon Kit'}}\r\n        <div class=\"kit-size\">\r\n          <img src=\"{{cdn 'img/info-icons/half_gallon_bucket.png'}}\" alt=\"Half gallon kit\">\r\n          <!-- <span class=\"equals\">=</span> -->\r\n          <img src=\"{{cdn 'img/info-icons/square_footage.png'}}\" alt=\"Square footage icon\">\r\n          <div class=\"covers\">\r\n            <p class=\"value\">{{value}}</p>\r\n            <p>Sq Ft</p>\r\n          </div>\r\n        </div>\r\n      {{/if}}\r\n    {{/each}}\r\n<div class=\"epoxy-calculator\">\r\n    <h4>Volume Calculator</h4>\r\n    <!-- length x width inputs -->\r\n    <div class=\"epoxy-calculator-inputs flex-row\">\r\n        <div class=\"epoxy-calculator-input\">\r\n            <label for=\"length\">Length (inches)</label>\r\n            <input type=\"number\" id=\"deepPourLength\" name=\"length\" placeholder=\"inches\" />\r\n        </div>\r\n        <div class=\"epoxy-calculator-input\">\r\n            <label for=\"width\">Width (inches)</label>\r\n            <input type=\"number\" id=\"deepPourWidth\" name=\"width\" placeholder=\"inches\" />\r\n        </div>\r\n        <div class=\"epoxy-calculator-input\">\r\n            <label for=\"depth\">Depth (inches)</label>\r\n            <input type=\"number\" id=\"deepPourDepth\" name=\"depth\" placeholder=\"inches\">\r\n        </div>\r\n        <!-- submit and calculate -->\r\n        <div class=\"epoxy-calculator-submit\">\r\n            <button class=\"scc-button-action button button--small\" id=\"deepPourCalculate\">Calculate</button>\r\n        </div>\r\n        </div>\r\n        \r\n        <!-- results -->\r\n        <div class=\"epoxy-calculator-results flex-row\">\r\n            <div class=\"epoxy-calculator-results-amount\">\r\n                <h5>US Fluid Ounces Needed: <span id=\"results-deep-pour-square-feet\">0</span></h5>\r\n            </div>\r\n            <div class=\"epoxy-calculator-results-amount\">\r\n                <h5>Gallons Needed: <span id=\"results-deep-pour-gallons\">0</span></h5>\r\n            </div>\r\n            <h5><em>Length (in) &times; Width (in) &times; Depth (in) &divide; 231 = Volume (Gallons)</em></h5>\r\n        </div>\r\n        <script>\r\n            // get inputs\r\n            const deepPourLength = document.getElementById('deepPourLength');\r\n            const deepPourWidth = document.getElementById('deepPourWidth');\r\n            const deepPourDepth = document.getElementById('deepPourDepth');\r\n            const deepPourCalculate = document.getElementById('deepPourCalculate');\r\n            // get results\r\n            const resultsDeepPourSquareFeet = document.getElementById('results-deep-pour-square-feet');\r\n            const resultsDeepPourGallons = document.getElementById('results-deep-pour-gallons');\r\n            // calculate square feet\r\n            function calculateDeepPourSquareFeet() {\r\n                const cubicInches = deepPourLength.value* deepPourWidth.value * deepPourDepth.value;\r\n                const ounces = cubicInches * 0.554;\r\n                resultsDeepPourSquareFeet.innerHTML = ounces.toFixed(2);\r\n            }\r\n            // calculate gallons\r\n            function calculateDeepPourGallons() {\r\n                //const squareFeet = deepPourLength.value * deepPourWidth.value * (deepPourDepth.value / 12);\r\n                //const gallons = squareFeet / 20;\r\n                //resultsDeepPourGallons.innerHTML = gallons.toFixed(2);\r\n                // Tanner quick edits\r\n                const cubicInches = deepPourLength.value * deepPourWidth.value * deepPourDepth.value;\r\n                const gallons = cubicInches / 231;\r\n                resultsDeepPourGallons.innerHTML = gallons.toFixed(2);\r\n            }\r\n            // calculate square feet and gallons\r\n            function calculateDeepPourAll() {\r\n                calculateDeepPourSquareFeet();\r\n                calculateDeepPourGallons();\r\n            }\r\n            // calculate on click\r\n            deepPourCalculate.addEventListener('click', calculateDeepPourAll);\r\n        </script>\r\n\r\n</div>\r\n</div>\r\n\r\n"}
